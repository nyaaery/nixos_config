Config {
    font = "xft:${font}:pixelsize=12",
    additionalFonts = [
        "xft:Font Awesome 6 Free Solid:pixelsize=12"
    ],
    fgColor = "<foreground>",
    bgColor = "<background>",

    position = TopH 24,
    commands = [
        Run XMonadLog,

        Run Cpu [ "-t", "<box type=Bottom width=2 color=<primary>><fc=<primary>><fn=1></fn></fc> <total>%</box>" ] 10,
        Run Memory [ "-t", "<box type=Bottom width=2 color=<primary>><fc=<primary>><fn=1></fn></fc> <used>/<total> MB <usedratio>%</box>" ] 10
    ],
    template = "%XMonadLog% }{ %cpu% %memory%"
}